    <div class="font-weight-bold text-secondary text-center " style="font-size: 50px;">Order</div>
    <br>
    <br>
    <form action="/placeorder" method="POST">

        <div class="container justify-content-center">
            <hr>
            <hr>

            <form>
                <div class="form-group">
                    <h4 class="font-weight-bold text-center text-secondary">When do you want the delivery?</h4>
                    <input type="radio" id="male" name="delivery" value="Delivery Now">
                    <label for="male">Delivery Now</label>
                    <input class="ml-4" type="radio" id="female" name="delivery" value="Schedule for later">
                    <label for="female">Schedule for later</label><br>
                    <br>
                    <hr>
                    <hr>
                    <br>
                    <h4 class="font-weight-bold text-center text-secondary">How to deliver</h4>
                    <input type="radio" class="radio1" value="Book a Courier" name="way">
                    <label for="male">Book a Courier</label>
                    <input class="ml-4 radio1" value="Hyperlocal" type="radio" id="female" name="way">
                    <label for="female">Hyperlocal</label><br>
                    <br>
                    <hr>
                    <hr>
                    <br>
                    <h4 class="font-weight-bold text-center text-secondary">Weight</h4>
                    <br>
                    <br>

                    <input type="radio" value="Up to 1 kg" class="radio1" name="weight">
                    <label for="male">Up to 1 kg</label>
                    <input class="ml-4 radio1" type="radio" value="Up to 5 kg" id="female" name="weight">
                    <label for="female">Up to 5 kg</label>
                    <input class="ml-4 radio1" type="radio" value="Up to 10 kg" id="female" name="weight">
                    <label for="female">Up to 10 kg</label>
                    <input class="ml-4 radio1" type="radio" value="Up to 15 kg" id="female" name="weight">
                    <label for="female">Up to 15 kg</label>
                    <input class="ml-4 radio1" type="radio" value="Up to 20 kg" id="female" name="weight">
                    <label for="female">Up to 20 kg</label>
                    <br>
                    <br>
                    <hr>
                    <hr>
                    <br>


                    <h4 class="font-weight-bold text-center text-secondary">Pickup</h4>
                    <label for="exampleFormControlInput1" class="text-secondary font-weight-bold ">Pickup
                        address</label>
                    <input type="text" class="form-control" id="exampleFormControlInput1"
                        placeholder="flat number, floor, building name, street name, landmarks, dimensions, package, fragile, contact name, etc."
                        name="pickup">
                    <br>
                    <br>

                    <div class="col-xs-3">

                        <label for="exampleFormControlInput1">10-digit mobile</label>
                        <input type="text" name="pickupnumber" class="form-control" style="width:auto"
                            id="exampleFormControlInput1">
                        <br>



                        <label for="exampleFormControlInput1">Pincode</label>
                        <input type="text" name="pickuppin" class="form-control" style="width:auto"
                            id="exampleFormControlInput1">
                    </div>
                    <br>
                    <br>
                    <hr>
                    <hr>

                    <h4 class="font-weight-bold text-center text-secondary">Delivery</h4>
                    <label for="exampleFormControlInput1" class="text-secondary font-weight-bold text-center">Delivery
                        address</label>
                    <input type="text" class="form-control" id="exampleFormControlInput1" name="delivery"
                        placeholder="flat number, floor, building name, street name, landmarks, dimensions, package, fragile, contact name, etc.">
                    <br>
                    <br>

                    <div class="col-xs-3">

                        <label for="exampleFormControlInput1">10-digit mobile</label>
                        <input name="deliverynumber" type="text" class="form-control" style="width:auto"
                            id="exampleFormControlInput1">
                    </div>
                    <br>

                    <br>




                    <label for="exampleFormControlInput1">Pincode</label>
                    <input type="text" name="deliverypin" class="form-control" style="width:auto"
                        id="exampleFormControlInput1">
                    <hr>
                    <hr>
                    <br>

                    <h4 class="font-weight-bold text-center text-secondary">Payment</h4>
                    <input type="radio" class="radio1" value="cash" name="payment">
                    <label for="male">Cash on delivery</label>
                    <input class="ml-4 radio1" type="radio" id="female" value="internet" name="payment">
                    <label for="female"> By Paytm,Credit..</label><br>
                    <br>
                    <hr>
                    <hr>
                    <br>
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Submit</button>


            </form>


